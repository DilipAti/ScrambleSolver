<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter The Scrambled Letters"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/scrambledWord1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/properWord1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/scrambledWord2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/properWord2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/scrambledWord3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/properWord3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/scrambledWord4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/properWord4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/solve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Solve"
        android:textAlignment="center"/>

</LinearLayout>
